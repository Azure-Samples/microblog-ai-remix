{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}